  interviewConfiguration   InterviewConfiguration?
  Job                      Job                        @relation(fields: [jobId], references: [id], onDelete: Cascade)
  videoInterviews          VideoInterview[]

  @@index([jobId])
  @@index([order])
  @@index([isFixed])
}

/// *
