  customMessage     String?            @map("custom_message")
  createdBy         String             @map("created_by")
  createdAt         DateTime           @default(now()) @map("created_at")
  updatedAt         DateTime           @updatedAt @map("updated_at")
  Application       Application        @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  Candidate         Candidate          @relation("OfferCandidate", fields: [candidateId], references: [id], onDelete: Cascade)
  Job               Job                @relation("OfferJob", fields: [jobId], references: [id], onDelete: Cascade)
  Creator           User               @relation("OfferCreator", fields: [createdBy], references: [id], onDelete: Cascade)
  OfferNegotiation  OfferNegotiation[]
  OfferDocument     OfferDocument[]

  @@index([applicationId])
  @@index([candidateId])
  @@index([jobId])
  @@index([status])
  @@index([createdBy])
  @@index([sentDate])
  @@index([expiryDate])
}

/// *
/// * Negotiation messages and counter-offers for offer letters.
/// *
/// * Tracks back-and-forth negotiation between employer and candidate,
/// * including proposed changes, responses, and final acceptance.
model OfferNegotiation {
  id              String                 @id @default(uuid())
  offerId         String                 @map("offer_id")
  messageType     NegotiationMessageType @map("message_type")
  message         String
  proposedChanges Json?                  @map("proposed_changes")
  senderId        String                 @map("sender_id")
  senderType      String                 @map("sender_type") // employer, candidate
  senderName      String                 @map("sender_name")
  senderEmail     String?                @map("sender_email")
  responded       Boolean                @default(false)
  response        String?
  responseDate    DateTime?              @map("response_date")
  createdAt       DateTime               @default(now()) @map("created_at")
  updatedAt       DateTime               @updatedAt @map("updated_at")
  OfferLetter     OfferLetter            @relation(fields: [offerId], references: [id], onDelete: Cascade)

  @@index([offerId])
  @@index([messageType])
  @@index([senderId])
  @@index([createdAt])
}

/// *
/// * Documents required from candidates before onboarding.
/// *
/// * Tracks document requests, uploads, and review status for
/// * documents like qualifications, background checks, NDAs, etc.
model OfferDocument {
  id            String           @id @default(uuid())
  offerId       String           @map("offer_id")
  applicationId String?          @map("application_id")
  name          String
  description   String?
  category      DocumentCategory
  status        DocumentStatus   @default(PENDING)
  fileUrl       String?          @map("file_url")
  fileName      String?          @map("file_name")
  uploadedDate  DateTime?        @map("uploaded_date")
  uploadedBy    String?          @map("uploaded_by")
  reviewedBy    String?          @map("reviewed_by")
  reviewedDate  DateTime?        @map("reviewed_date")
  reviewNotes   String?          @map("review_notes")
  expiryDate    DateTime?        @map("expiry_date")
  isRequired    Boolean          @default(true) @map("is_required")
  templateUrl   String?          @map("template_url")
  createdAt     DateTime         @default(now()) @map("created_at")
  updatedAt     DateTime         @updatedAt @map("updated_at")
  OfferLetter   OfferLetter      @relation(fields: [offerId], references: [id], onDelete: Cascade)
  Application   Application?     @relation("OfferDocumentApplication", fields: [applicationId], references: [id], onDelete: Cascade)

  @@index([offerId])
  @@index([applicationId])
  @@index([category])
  @@index([status])
  @@index([isRequired])
}

